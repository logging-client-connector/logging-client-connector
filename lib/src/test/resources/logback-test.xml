<configuration>
	<appender name="CONSOLE" class="log.appender.TestAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>
	<root level="INFO">
		<appender-ref ref="CONSOLE"/>
	</root>

	<logger name="org.mockserver.log" level="OFF"/>
	<logger name="org.loggingclientconnector" level="TRACE"/>
</configuration>
